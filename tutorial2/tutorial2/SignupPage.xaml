<Page x:Class="tutorial2.SignUp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
        Title="Todo Tutorial 2" d:DesignHeight="419" d:DesignWidth="443">
    <StackPanel Margin="10">
        <TextBlock TextDecorations="Underline">Mail:</TextBlock>
        <TextBox Name="mailBox" Height="23" Margin="10" TextWrapping="Wrap"/>

        <TextBlock TextDecorations="Underline">Password:</TextBlock>
        <PasswordBox Name="passwordBox" Height="23" Margin="10"/>

        <Button Name="SignupButton" Content="Signup" Margin="10" Click="SignupButton_Click"/>
    </StackPanel>
</Page>
